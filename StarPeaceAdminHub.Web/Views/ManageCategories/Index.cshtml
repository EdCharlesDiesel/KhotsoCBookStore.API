                                delete
                            </a>
                            </button>
                        </td>
                        <td>
                            <a asp-controller="ManageCategorys"
                               asp-action="@nameof(ManageCategoriesController.Edit)"
                               asp-route-id="@Category.Id">
                                edit
                            </a>
                        </td>
                        <td>
                            @Category.CategoryName
                        </td>
                        <td>
                            @* @Category.Name *@
                        </td>
                        <td>
                            @* @Category.DurationInDays *@
                        </td>
                        <td>
                            @* @Category.Price *@
                        </td>
                        <td>
                            @* @(Category.StartValidityDate.HasValue ?
                                Category.StartValidityDate.Value.ToString("d")
                                :
                                String.Empty) *@
                        </td>
                        <td>
                            @* @(Category.EndValidityDate.HasValue ?
                                Category.EndValidityDate.Value.ToString("d")
                                :
                                String.Empty) *@
                        </td>

                    </tr>

                    }
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" asp-controller="ManageCategorys"
              asp-action="@nameof(ManageCategoriesController.Create)">
            New Book
        </a>
    </div>

    
